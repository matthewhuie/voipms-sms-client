<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="@dimen/margin">

    <LinearLayout
        android:layout_width="@dimen/contact_badge"
        android:layout_height="@dimen/contact_badge"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/letter"
            android:layout_width="@dimen/contact_badge"
            android:layout_height="@dimen/contact_badge"
            android:gravity="center"
            android:textAppearance="@style/Subtitle1"
            android:textColor="@color/new_conversation_letter" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <net.kourlas.voipms_sms.ui.CustomQuickContactBadge
            android:id="@+id/photo"
            android:layout_width="@dimen/contact_badge"
            android:layout_height="@dimen/contact_badge"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/photo_letter"
            android:layout_width="@dimen/contact_badge"
            android:layout_height="@dimen/contact_badge"
            android:gravity="center"
            android:textAppearance="@style/Headline5"
            android:textColor="@android:color/white" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/Subtitle1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/Body2" />

            <TextView
                android:id="@+id/phone_number_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/phone_number"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="1"
                android:textAppearance="@style/Caption" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
